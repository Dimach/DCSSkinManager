<Window x:Class="DCSSkinManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCSSkinManager"
        xmlns:utils="clr-namespace:DCSSkinManager.Utils"
        xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Background="AliceBlue" Content="Сохранить" BorderBrush="Black"/>
            <Button Background="AliceBlue" Content="Загрузить" BorderBrush="Black"/>
            <Button Background="AliceBlue" Content="Удалить"/>
            <Button Background="AliceBlue" Content="Сломать"/>
        </StackPanel>
        <ProgressBar DockPanel.Dock="Bottom" Height="10" Minimum="0" Maximum="100" Value="55"/>
        <ListView ItemsSource="{Binding Source={StaticResource enmPositions}}" FontSize="20" SelectionChanged="ListView_SelectionChanged"/>
        <ListView Name="skinList" ItemsSource="{Binding ElementName=UserFiles, Path=Files}" >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Header="File name"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Author}" Header="Author"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Date}" Header="Date"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Description}" Header="Description"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Downloads}" Header="Downloads"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Size}" Header="Size"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>
